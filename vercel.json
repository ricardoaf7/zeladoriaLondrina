{
  "version": 2,
  "name": "zeladoria-londrina",
  "alias": ["zeladoria-londrina.vercel.app"],
  "buildCommand": "npm run build:prod",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "nodeVersion": "18.x",
  
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  
  "functions": {
    "server/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "api/**/*.ts": {
      "runtime": "nodejs18.x", 
      "maxDuration": 30
    }
  },
  
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/**",
          "shared/**",
          "supabase/**"
        ]
      }
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/status",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/analytics/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/ocr/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/coleta/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/areas/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/schedules/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/services/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/csv/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/map/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/import/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/status",
      "dest": "server/index.ts"
    },
    {
      "src": "/dashboard-eficiencia",
      "dest": "server/index.ts"
    },
    {
      "src": "/consulta-coleta",
      "dest": "server/index.ts"
    },
    {
      "src": "/map-performance",
      "dest": "server/index.ts"
    },
    {
      "src": "/ocr-import",
      "dest": "server/index.ts"
    },
    {
      "src": "/dashboard-eficiencia",
      "dest": "server/index.ts"
    },
    {
      "src": "/consulta-coleta",
      "dest": "server/index.ts"
    },
    {
      "src": "/map-performance",
      "dest": "server/index.ts"
    },
    {
      "src": "/ocr-import",
      "dest": "server/index.ts"
    },
    {
      "src": "/((?!api|dashboard-eficiencia|consulta-coleta|map-performance|ocr-import|assets|dist|static|.*\\.js$|.*\\.css$|.*\\.png$|.*\\.jpg$|.*\\.jpeg$|.*\\.svg$|.*\\.ico$|.*\\.woff$|.*\\.woff2$|.*\\.ttf$).*)",
      "dest": "/dist/public/index.html"
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.supabase.co https://*.vercel.app; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.supabase.co https://*.vercel.app wss://*.supabase.co; worker-src 'self' blob:;"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/(.*)\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.ts"
    },
    {
      "source": "/dashboard-eficiencia",
      "destination": "/server/index.ts"
    },
    {
      "source": "/consulta-coleta",
      "destination": "/server/index.ts"
    },
    {
      "source": "/map-performance",
      "destination": "/server/index.ts"
    },
    {
      "source": "/ocr-import",
      "destination": "/server/index.ts"
    },
    {
      "source": "/((?!api|dashboard-eficiencia|consulta-coleta|map-performance|ocr-import|assets|dist|static|.*\\.js$|.*\\.css$|.*\\.png$|.*\\.jpg$|.*\\.jpeg$|.*\\.svg$|.*\\.ico$|.*\\.woff$|.*\\.woff2$|.*\\.ttf$).*)",
      "destination": "/dist/public/index.html"
    }
  ]
  
  "redirects": [
    {
      "source": "/admin",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/dashboard",
      "destination": "/",
      "permanent": true
    }
  ],
  
  "cleanUrls": true,
  "trailingSlash": false,
  
  "github": {
    "silent": true,
    "autoAlias": false,
    "deploymentEnabled": true
  },
  
  "crons": [
    {
      "path": "/api/analytics/update",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/status/health",
      "schedule": "*/5 * * * *"
    }
  ],
  
  "regions": ["gru1", "iad1"],
  
  "functions": {
    "server/index.ts": {
      "maxDuration": 30,
      "memory": 1024,
      "concurrency": 10
    }
  }
}
    {
      "src": "/import-csv",
      "dest": "server/index.ts"
    },
    {
      "source": "/import-csv",
      "destination": "/server/index.ts"
    },